<body>
    <h1>Kabyle Word Game</h1>
    <p>Click on a word button to hear its pronunciation:</p>

    <!-- Example word buttons -->
    <button class="word-button" onclick="playAudio('audio/Aqcic.mp3')">Aqcic</button>
    <button class="word-button" onclick="playAudio('audio/Tifirest.mp3')">Tifirest</button>
    <button class="word-button" onclick="playAudio('audio/Aman.mp3')">Aman</button>

    <!-- Audio player (hidden) -->
    <audio id="gameAudio" preload="auto"></audio>

    <script>
        // Function to play audio files
        function playAudio(audioFilePath) {
            const audioPlayer = document.getElementById('gameAudio');
            audioPlayer.src = audioFilePath; // Set the audio file source
            audioPlayer.play().catch(error => {
                console.error("Error playing audio:", error);
            });
        }
    </script>
